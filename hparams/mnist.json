{
    "Dir": {
        "log_root": "results/celeba"
    },
    "Glow" : {
        "image_shape": [32, 32, 1],
        "hidden_channels": 512,
        "K": 20,
        "L": 1,
        "actnorm_scale": 1.0,
        "flow_permutation": "invconv",
        "flow_coupling": "affine",
        "LU_decomposed": false,
        "learn_top": false,
        "y_condition": false,
        "y_classes": 40
    },
    "Criterion" : {
        "y_condition": "multi-classes"
    },
    "Data" : {
        "resize": 32
    },
    "Optim": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.9999],
            "eps": 1e-8
        },
        "Schedule": {
            "name": "noam_learning_rate_decay",
            "args": {
                "warmup_steps": 4000,
                "minimum": 1e-4
            }
        }
    },
    "Device": {
        "glow": "cpu",
        "data": "cpu"
    },
    "Train": {
        "batch_size": 8,
        "num_batches": 10,
        "max_grad_clip": 5,
        "max_grad_norm": 100,
        "max_checkpoints": 20,
        "checkpoints_gap": 5000,
        "num_plot_samples": 1,
        "scalar_log_gap": 50,
        "plot_gap": 50,
        "inference_gap": 50,
        "warm_start": "",
        "weight_y": 0.5
    }
}
